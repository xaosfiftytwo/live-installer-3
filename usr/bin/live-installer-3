#!/bin/bash

# Handle some arguments before running the application
args=$@
optimize='OO'
for i in "$args"; do
  case $i in
    -o|--oem)
      # Change screen resolution if in OEM mode
      SIZE=$(xrandr | grep 'x768 ' | head -1 | awk '{print $1}')
      if [ "$SIZE" != "" ]; then
        xrandr --size $SIZE
      fi
      shift # past argument=value
      ;;
    -d|--debug)
      # Change screen resolution if in OEM mode
      unset optimize
      shift # past argument=value
      ;;
    -t=*|--target=*)
      TARGET="${i#*=}"
      shift # past argument=value
      ;;
    *)
      # unknown option
    ;;
  esac
done

# Get python3 path
PYTHON=$(which python3)

# Get launcher (gksudo or kdesudo)
LAUNCHER=''
if [ $UID -ne 0 ]; then
  LAUNCHER='gksudo'
  if [ -e "/usr/bin/kdesudo" ]; then
    LAUNCHER="kdesudo"
  fi
fi

# Launch the application with all arguments
$LAUNCHER "$PYTHON -tt${optimize} /usr/lib/live-installer-3/main.py $args"
